---
import Link from '@/components/Link.astro'
import MobileMenu from '@/components/ui/mobile-menu'
import SearchButton from '@/components/react/SearchButton'
---

<header class="bg-background sticky top-0 z-10" transition:persist>
  <div class="flex items-center justify-between gap-4 p-4">
    <Link href="/" class="flex shrink-0 items-center gap-2 font-medium" data-astro-reload>
      <img
        src="/static/logo.png"
        alt="Logo"
        class="h-6 w-auto"
        height="24"
        loading="eager"
        fetchpriority="high"
      />
    </Link>
    <div class="flex items-center gap-4">
      <SearchButton client:idle />
      <Link href="/tags" aria-label="Tags">
        <svg class="h-5 w-5 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2H2v10l9.29 9.29c.94.94 2.48.94 3.42 0l6.58-6.58c.94-.94.94-2.48 0-3.42L12 2Z"></path>
          <path d="M7 7h.01"></path>
        </svg>
      </Link>
      <MobileMenu client:idle transition:persist />
    </div>
  </div>
</header>
